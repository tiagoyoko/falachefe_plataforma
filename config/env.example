# Database - Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URLs
DATABASE_URL=your_database_url_here
POSTGRES_URL=your_postgres_url_here

# UAZ API (WhatsApp Integration)
UAZ_API_KEY=your_uaz_api_key_here
UAZ_API_SECRET=your_uaz_api_secret_here
UAZ_WEBHOOK_SECRET=your_uaz_webhook_secret_here
UAZ_BASE_URL=https://your-uaz-instance.uazapi.com

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Redis Cache - Upstash
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Email Service - Resend
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@falachefe.com
APP_NAME=FalaChefe

# Google Authentication
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Better Auth
BETTER_AUTH_SECRET=your_better_auth_secret_here
# Gerar com: openssl rand -base64 32

# Better Auth - Configurações Avançadas (Opcional)
BETTER_AUTH_SESSION_EXPIRES_IN=604800
BETTER_AUTH_SESSION_UPDATE_AGE=86400

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token_here
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CrewAI Configuration (Open Source)
CREWAI_DEBUG=false
CREWAI_VERBOSE=false
CREWAI_MAX_ITERATIONS=10
CREWAI_MEMORY_ENABLED=true
CREWAI_MEMORY_TYPE=redis
CREWAI_ORCHESTRATOR_TYPE=sequential

# CrewAI Python Integration
CREWAI_PYTHON_PATH=/usr/local/bin/python3
CREWAI_PROJECT_PATH=./crewai-projects

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true

# UAZ API Webhook Configuration
UAZ_WEBHOOK_URL=https://your-domain.com/api/uaz-webhook
UAZ_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here